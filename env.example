# Environment
NODE_ENV=development

# API Gateway
PORT=4000
REQUEST_TIMEOUT=30000

# Security
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
CORS_ORIGIN=*

# Service URLs
USER_SERVICE_URL=http://localhost:4001
EXPENSE_SERVICE_URL=http://localhost:4002
SETTLEMENT_SERVICE_URL=http://localhost:4003
NOTIFICATION_SERVICE_URL=http://localhost:4004
ANALYTICS_SERVICE_URL=http://localhost:4005
PAYMENT_SERVICE_URL=http://localhost:4006

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Monitoring
MONITORING_ENABLED=true
METRICS_ENABLED=true
METRICS_PATH=/metrics
TRACING_ENABLED=true

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
# Circuit breaker settings for User Service
USER_SERVICE_FAILURE_THRESHOLD=3
USER_SERVICE_RESET_TIMEOUT=30000
USER_SERVICE_SUCCESS_THRESHOLD=2
# Circuit breaker settings for Expense Service
EXPENSE_SERVICE_FAILURE_THRESHOLD=3
EXPENSE_SERVICE_RESET_TIMEOUT=30000
EXPENSE_SERVICE_SUCCESS_THRESHOLD=2
# Circuit breaker settings for Settlement Service
SETTLEMENT_SERVICE_FAILURE_THRESHOLD=3
SETTLEMENT_SERVICE_RESET_TIMEOUT=30000
SETTLEMENT_SERVICE_SUCCESS_THRESHOLD=2
# Circuit breaker settings for Notification Service
NOTIFICATION_SERVICE_FAILURE_THRESHOLD=3
NOTIFICATION_SERVICE_RESET_TIMEOUT=30000
NOTIFICATION_SERVICE_SUCCESS_THRESHOLD=2
# Circuit breaker settings for Analytics Service
ANALYTICS_SERVICE_FAILURE_THRESHOLD=3
ANALYTICS_SERVICE_RESET_TIMEOUT=30000
ANALYTICS_SERVICE_SUCCESS_THRESHOLD=2
# Circuit breaker settings for Payment Service
PAYMENT_SERVICE_FAILURE_THRESHOLD=3
PAYMENT_SERVICE_RESET_TIMEOUT=30000
PAYMENT_SERVICE_SUCCESS_THRESHOLD=2

# Cache
CACHE_ENABLED=true
CACHE_TTL=60
CACHE_MAX_ITEMS=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=1000

# Database (if needed)
MONGODB_URI=mongodb://localhost:27017/spendsync
REDIS_URL=redis://localhost:6379

# Email (if needed)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
EMAIL_FROM=noreply@spendsync.com

# Payment Integration (if needed)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Analytics (if needed)
MIXPANEL_TOKEN=your-mixpanel-token
GOOGLE_ANALYTICS_ID=your-ga-id 
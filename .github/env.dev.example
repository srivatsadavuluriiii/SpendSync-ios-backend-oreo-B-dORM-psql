# SpendSync Development Environment Variables Sample
# Rename this file to .env.dev and update the values

# General
NODE_ENV=development
PORT=4000

# Supabase Configuration
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://admin:password123@localhost:27017/spendsync_dev?authSource=admin
REDIS_URL=redis://localhost:6379

# Service URLs
USER_SERVICE_URL=http://localhost:3001
EXPENSE_SERVICE_URL=http://localhost:3002
SETTLEMENT_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
PAYMENT_SERVICE_URL=http://localhost:3005
ANALYTICS_SERVICE_URL=http://localhost:3006

# Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# Email Configuration
EMAIL_SERVICE_API_KEY=your_email_service_api_key
SMS_SERVICE_API_KEY=your_sms_service_api_key

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Monitoring
MONITORING_ENABLED=true
METRICS_ENABLED=true
TRACING_ENABLED=true 
# SpendSync Development Environment Variables Sample
# Rename this file to .env.dev and update the values

# General
NODE_ENV=development
TAG=develop

# Database
MONGO_USERNAME=spendsync
MONGO_PASSWORD=spendsyncdev

# Security
JWT_SECRET=spendsync-dev-jwt-secret
CORS_ORIGIN=*

# Service Ports
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
EXPENSE_SERVICE_PORT=3002
SETTLEMENT_SERVICE_PORT=3003
NOTIFICATION_SERVICE_PORT=3004

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=noreply@spendsync.app
EMAIL_PASSWORD=app-specific-password
EMAIL_FROM=SpendSync <noreply@spendsync.app> 
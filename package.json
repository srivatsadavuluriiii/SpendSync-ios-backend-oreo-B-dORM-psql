{
  "name": "spendsync-backend",
  "version": "1.0.0",
  "description": "SpendSync Backend - An expense-splitting app with advanced debt settlement",
  "main": "src/api-gateway/index.js",
  "scripts": {
    "setup": "chmod +x scripts/setup-dev.sh && ./scripts/setup-dev.sh",
    "start": "node --expose-gc src/api-gateway/index.js",
    "dev": "npm run setup && nodemon --inspect=0.0.0.0:9229 src/api-gateway/index.js",
    "dev:services": "docker-compose up --remove-orphans",
    "dev:build": "docker-compose build --no-cache",
    "dev:clean": "docker-compose down -v && docker system prune -f && npm run dev:build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v && docker-compose up -d",
    "predev": "npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:settlement": "jest --testPathPattern=src/services/settlement-service",
    "test:user": "jest --testPathPattern=src/services/user-service",
    "test:expense": "jest --testPathPattern=src/services/expense-service",
    "test:notification": "jest --testPathPattern=src/services/notification-service",
    "test:gateway": "jest --testPathPattern=src/api-gateway",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:ci": "jest --ci --coverage",
    "test:algorithms": "node tests/run-algorithm-tests.js",
    "test:contract": "jest --testPathPattern=tests/contracts",
    "test:pact": "jest --testPathPattern=tests/pact/providers",
    "pact:docker": "docker-compose -f docker-compose.pact.yml up --build",
    "pact:verify": "jest --testPathPattern=tests/pact/providers",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "docs": "swagger-jsdoc -d src/config/swagger.js -o docs/swagger.json",
    "docs:serve": "node scripts/serve-docs.js",
    "types:generate": "node src/utils/generate-declaration-files.js",
    "types:check": "node src/utils/check-test-types.js",
    "types:check-all": "tsc --noEmit",
    "pretest": "npm run types:check"
  },
  "dependencies": {
    "@babel/runtime": "^7.24.0",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "chalk": "^5.4.1",
    "core-js": "^3.42.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "csv-stringify": "^6.5.2",
    "decimal.js": "^10.4.3",
    "ejs": "^3.1.10",
    "excel4node": "^1.8.2",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-prometheus-middleware": "^1.2.0",
    "express-rate-limit": "^7.1.0",
    "google-auth-library": "^9.15.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.6.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^7.18.3",
    "moment": "^2.30.1",
    "mongo-sanitize": "^1.1.0",
    "mongodb": "^6.1.0",
    "mongodb-memory-server": "^8.12.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "node-fetch": "^2.6.9",
    "nodemailer": "^6.9.1",
    "plaid": "^18.3.0",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.27.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@pact-foundation/pact": "^15.0.1",
    "@pact-foundation/pact-node": "^10.18.0",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.18",
    "@types/supertest": "^6.0.3",
    "babel-jest": "^29.7.0",
    "babel-plugin-istanbul": "^7.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "mongodb-memory-server": "^9.0.1",
    "nock": "^13.4.0",
    "nodemon": "^3.0.1",
    "sinon": "^17.0.1",
    "source-map-support": "^0.5.21",
    "stripe": "^18.1.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "SpendSync Team",
  "license": "MIT"
}
